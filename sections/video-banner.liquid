{% schema %}
{
  "name": "Video-Banner",
  "settings": [
    {
      "type": "video",
      "id": "background_video",
      "label": "Background Video",
      "info": "Upload a video to be used as the background"
    },
    {
      "type": "text",
      "id": "headline_text",
      "label": "Headline Text",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Video Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% assign video_asset = section.settings.background_video %}
{% assign video_url = section.settings.background_video.sources[1].url %}

<section class="full-screen-video-banner">
  <video autoplay loop muted playsinline>
    <source src="{{ video_url }}" type="video/mp4">
  </video>
  <div class="overlay"></div>
  <div class="content">
    <div class="interior-content">
      <h1>{{ section.settings.headline_text }}</h1>
      <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

<style>
.full-screen-video-banner {
  position: relative;
  height: calc(100vw * .5625 );
  overflow: hidden;
}

video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Adjust the opacity as desired */
}

.content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  text-align: left;
  color: #fff;
}

.interior-content {
  display: inline-block;
  text-align: left;
  margin-left: 50vw;

h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.button {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background-color: #000;
  color: #fff;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.button:hover {
  background-color: #333;
}
</style>



