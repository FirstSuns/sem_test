{% comment %} {{ 'np-style.css' | asset_url | stylesheet_tag }} {% endcomment %}
<div class="np-about-nic">
  <div class="page-width np-page-width">
    {% if section.settings.cover_image!=blank %} 
      <div class="np-about-nic-image">
        {% assign image_nd = section.settings.cover_image %}
        <img
            srcset="
              {%- if image_nd.width >= 165 -%}{{ image_nd | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if image_nd.width >= 360 -%}{{ image_nd | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if image_nd.width >= 533 -%}{{ image_nd | image_url: width: 533 }} 533w,{%- endif -%}
              {%- if image_nd.width >= 720 -%}{{ image_nd | image_url: width: 720 }} 720w,{%- endif -%}
              {%- if image_nd.width >= 940 -%}{{ image_nd | image_url: width: 940 }} 940w,{%- endif -%}
              {%- if image_nd.width >= 1066 -%}{{ image_nd | image_url: width: 1066 }} 1066w,{%- endif -%}
              {{ image_nd | image_url }} {{ image_nd.width }}w
            "
            src="{{ image_nd | image_url: width: 1066 }}"
            sizes="1250px"
            alt=""
            class="motion-reduce"
            loading="lazy"
            width="{{ image_nd.width }}"
            height="{{ image_nd.height }}"
          >  
      </div>
    {% endif %}
    <div class="np-about-nic-content">
      {% if section.settings.title!=blank %}
        <div class="np-about-nic_title">
          {{ section.settings.title }}
        </div>
      {% endif %}  
      {% if section.settings.content!=blank %}
        <div class="np-about-nic_description">
          {{ section.settings.content }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About NIC",
    "settings": [
      {
            "type": "image_picker",
            "id": "cover_image",
            "label": "Banner Picture"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      }
    ]
  }
{% endschema %}

