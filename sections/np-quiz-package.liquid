{{ 'np-style.css' | asset_url | stylesheet_tag }}

<div class="np-video-section">
  <div class="np-page-width page-width">
    <div class="np-video_banner">      
      <div class="full-section-text text-center">
        {% if section.settings.title!=blank %}
          <h1 class="np-collection-hero__title collection-hero__title">
            {{ section.settings.title }}
          </h1>
        {% endif %}  
        {% if section.settings.content!=blank %}
          <div class="np-collection-hero__description collection-hero__description rte">
            {{ section.settings.content }}
          </div>
        {% endif %}
      </div>      
    </div>
  </div>
</div>

<div class="np-quiz-package-section">
  <div class="np-page-width page-width">
    {% if section.settings.package_title!=blank %}
      <div class="np-quiz-package-title">
        {{ section.settings.package_title }}
      </div>      
    {% endif %}
    <div class="np-quiz-packages">
      <!--Packages-->
      {% for block in section.blocks %}
        <div class="np-quiz-package-item">
          <a href="{{ block.settings.link }}">
          {% if block.settings.image!=blank %} 
            <div class="np-quiz-package-img">
              {% assign image_nd = block.settings.image %}
              <img
                  srcset="
                    {%- if image_nd.width >= 165 -%}{{ image_nd | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if image_nd.width >= 360 -%}{{ image_nd | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if image_nd.width >= 533 -%}{{ image_nd | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if image_nd.width >= 720 -%}{{ image_nd | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if image_nd.width >= 940 -%}{{ image_nd | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if image_nd.width >= 1066 -%}{{ image_nd | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ image_nd | image_url }} {{ image_nd.width }}w
                  "
                  src="{{ image_nd | image_url: width: 533 }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                  alt=""
                  class="motion-reduce"
                  loading="lazy"
                  width="{{ image_nd.width }}"
                  height="{{ image_nd.height }}"
                >
            </div>
          {% endif %}
          <div class="np-quiz-package-content">
            {% if block.settings.title!=blank %}
              <div class="np-quiz-package-inner-title">
                <h2>{{ block.settings.title }}</h2>
              </div>
            {% endif %}
            {% if block.settings.content!=blank %}
              <div class="np-quiz-package-inner-content">
                <p>{{ block.settings.content }}</p>
              </div>
            {% endif %}
          </div>
          </a>
        </div>
      {% endfor %}
    </div>

    <div class="saprator"></div>
  </div>
</div>







{% schema %}
  {
    "name": "Quiz Package",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "richtext",
        "id": "package_title",
        "label": "Package Title"
      }
    ],
    "blocks":[
      {
        "type":"List",
        "name":"Quiz",
        "settings":[
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
        
      }
    ]
  }
{% endschema %}

