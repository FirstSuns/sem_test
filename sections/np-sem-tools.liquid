{% comment %} {{ 'np-style.css' | asset_url | stylesheet_tag }} {% endcomment %}

<div class="np-sem-tool">
  <div class="page-width np-page-width">
    <div class="np-sem-tool-top">
       {% if section.settings.title!=blank %}
          <h1 class="np-sem-tool__title">
            {{ section.settings.title }}
          </h1>
        {% endif %}  
        {% if section.settings.content!=blank %}
          <div class="np-sem-tool__description">
            {{ section.settings.content }}
          </div>
        {% endif %}
    </div>
    <div class="np-sem-tool-bottom">
      <!--Loop-->
      {% for block in section.blocks %}
        <div class="np-sem-tool-item">         
          <div class="np-sem-tool-content">
            {% if block.settings.content!=blank %}
              <div class="np-sem-tool-inner-content">
                {{ block.settings.content }}
              </div>
            {% endif %}
          </div>          
        </div>
      {% endfor %}
    </div>
  </div>
</div>
       
     


      







{% schema %}
  {
    "name": "SEM Tools",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "richtext",
        "id": "package_title",
        "label": "Package Title"
      }
    ],
    "blocks":[
      {
        "type":"Cards",
        "name":"Cards",
        "settings":[
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
        
      }
    ]
  }
{% endschema %}

